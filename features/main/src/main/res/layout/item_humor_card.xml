<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="354dp"
    android:layout_height="315dp"
    android:layout_marginHorizontal="30dp"
    android:layout_marginBottom="27dp"
    android:background="@drawable/rounded_background_for_humor_card_item">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        android:text="신입 가나다님"
        android:textColor="@color/colorDarkGrey"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="2020.02.22"
        android:textColor="@color/colorDarkGrey"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/user_name"
        app:layout_constraintStart_toEndOf="@id/user_name"
        app:layout_constraintTop_toTopOf="@id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="소나무가\n삐지면?"
        android:textColor="@color/colorMiddleGrey"
        android:textSize="43dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="17.86dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/user_name" />

    <TextView
        android:id="@+id/heart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2.45dp"
        android:text="48개"
        android:textColor="@color/colorDarkGrey"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@id/heart"
        app:layout_constraintStart_toEndOf="@id/heart"
        app:layout_constraintTop_toTopOf="@id/heart" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_comment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/heart_count" />

    <TextView
        android:id="@+id/comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="48개"
        android:textColor="@color/colorDarkGrey"
        android:textSize="11dp"
        app:layout_constraintStart_toEndOf="@id/comment"
        app:layout_constraintTop_toTopOf="@id/heart_count" />

</androidx.constraintlayout.widget.ConstraintLayout>