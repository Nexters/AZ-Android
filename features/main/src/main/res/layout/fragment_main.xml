<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.az.main.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorDarkGrey">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_info_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/user_grade_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

                <TextView
                    android:id="@+id/user_grade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:text="유머쪼랩ㅋ"
                    android:textColor="@color/colorWhite"
                    android:textSize="45dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/user_grade_guide"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/user_grade_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="분발하자^^"
                    android:textColor="@color/colorWhite"
                    android:textSize="45dp"
                    app:layout_constraintStart_toStartOf="@id/user_grade"
                    app:layout_constraintTop_toBottomOf="@id/user_grade" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="154dp"
                    android:src="@drawable/sinip_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_info_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@id/humor_card_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_info_grade">

                <TextView
                    android:id="@+id/humor_count"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:background="@drawable/rounded_background_for_humor_count"
                    android:gravity="center_horizontal"
                    android:text="14개"
                    android:textColor="@color/colorWhite"
                    android:textSize="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/humor_count_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:text="더 작성하면 등급업!"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="@id/humor_count"
                    app:layout_constraintStart_toEndOf="@id/humor_count" />

                <ProgressBar
                    style="@style/HumorGradeProgressbar"
                    android:layout_width="0dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="11dp"
                    android:progress="70"
                    android:progressDrawable="@drawable/humor_grade_progressbar"
                    app:layout_constraintEnd_toEndOf="@id/humor_count_text"
                    app:layout_constraintStart_toStartOf="@id/humor_count"
                    app:layout_constraintTop_toBottomOf="@id/humor_count" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/humor_card_title"
                android:layout_width="0dp"
                android:layout_height="84dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/rounded_background_for_humor_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/user_info_progress">

                <TextView
                    android:layout_width="225dp"
                    android:layout_height="36dp"
                    android:background="@drawable/rounded_background_for_humor_card_title"
                    android:gravity="center"
                    android:text="오늘의 개그"
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorGrey"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/humor_card_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.az.main.StickyScrollView>
</layout>