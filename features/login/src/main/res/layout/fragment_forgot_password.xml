<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSemiBlack">

    <ImageView
        android:id="@+id/img_forgot_password_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:src="@drawable/ic_forgot_password"
        app:layout_constraintEnd_toEndOf="@id/txt_forgot_password_mail"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/txt_forgot_password_mail"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_rounded_button_white_border"
        android:gravity="center"
        android:text="@string/forgot_password_mail"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/img_forgot_password_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/forgot_password_guide_text"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="@id/txt_forgot_password_mail"
        app:layout_constraintStart_toStartOf="@id/txt_forgot_password_mail"
        app:layout_constraintTop_toBottomOf="@id/txt_forgot_password_mail" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="150dp" />

</androidx.constraintlayout.widget.ConstraintLayout>